{
	"name": "balena-vscode",
	"author": "Kaleb Pace (development.6v1i9@slmail.me)",
	"publisher": "kalebpace",
	"displayName": "balena-vscode",
	"description": "Unofficial VS Code extension for integration with Balena",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"activationEvents": [
		"onView:fleetDevices",
		"onView:deviceSummary",
		"onCommand:balena-vscode.loginToBalenaCloud",
		"onCommand:balena-vscode.selectActiveFleet",
		"onCommand:balena-vscode.inspectDevice"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fleetExplorer",
					"title": "Balena: Fleet Explorer",
					"icon": "$(symbol-method)"
				}
			],
			"panel": [
				{
					"id": "deviceInspector",
					"title": "Balena: Device Inspector",
					"icon": "$(symbol-method)"
				}
			]
		},
		"views": {
			"fleetExplorer": [
				{
					"id": "fleetDevices",
					"name": "Devices",
					"contextualTitle": "Balena: Fleet Explorer"
				},
				{
					"id": "fleetReleases",
					"name": "Releases",
					"contextualTitle": "Balena: Fleet Explorer"
				},
				{
					"id": "fleetVariables",
					"name": "Variables",
					"contextualTitle": "Balena: Fleet Explorer"
				},
				{
					"id": "fleetMeta",
					"name": "Meta",
					"contextualTitle": "Balena: Fleet Explorer",
					"visibility": "collapsed"
				}
			],
			"deviceInspector": [
				{
					"id": "deviceSummary",
					"name": "Summary",
					"contextualTitle": "Balena: Device Inspector"
				},
				{
					"id": "deviceServices",
					"name": "Services",
					"contextualTitle": "Balena: Device Inspector"
				},
				{
					"id": "deviceVariables",
					"name": "Variables",
					"contextualTitle": "Balena: Device Inspector"
				},
				{
					"id": "deviceMeta",
					"name": "Meta",
					"contextualTitle": "Balena: Device Inspector",
					"visibility": "collapsed"
				}
			]
		},
		"commands": [
			{
				"command": "balena-vscode.loginToBalenaCloud",
				"title": "Login to Balena Cloud",
				"category": "Balena"
			},
			{
				"command": "balena-vscode.selectActiveFleet",
				"title": "Select Active Fleet",
				"category": "Balena Fleet Explorer"
			},
			{
				"command": "balena-vscode.inspectDevice",
				"title": "Inspect Device",
				"category": "Balena Device Inspector",
				"icon": {
					"dark": "$(inspect)",
					"light": "$(inspect)"
				}
			},
			{
				"command": "balena-vscode.openSSHConnectionInTerminal",
				"title": "Open SSH in Terminal",
				"category": "Balena Device Inspector",
				"icon": {
					"dark": "$(terminal)",
					"light": "$(terminal)"
				}
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "balena-vscode.inspectDevice",
					"when": "view == fleetDevices && viewItem == device"
				},
				{
					"command": "balena-vscode.openSSHConnectionInTerminal",
					"when": "view == fleetDevices && viewItem == device"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
		"watch-tests": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json -w",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"balena-sdk": "^16.25.1",
		"rxjs": "^7.5.6"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.70.0",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.20.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"generator-code": "^1.6.14",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"tsc-alias": "^1.7.0",
		"typescript": "^4.7.4",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	}
}
